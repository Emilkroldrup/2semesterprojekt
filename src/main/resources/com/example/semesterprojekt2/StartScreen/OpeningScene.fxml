<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="682.0" prefWidth="389.0" spacing="20.0" style="-fx-background-color: FFC0CB;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.semesterprojekt2.ui.StartScreen.OpeningScreen">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="welcomeText" text="Are you a Customer or an Employee" textAlignment="CENTER" translateY="60.0">
         <font>
            <Font name="System Italic" size="16.0" />
         </font>
      </Label>
      <ImageView fx:id="Logo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" translateY="-145.0">
         <image>
            <Image url="@../../../../Pictures/Barber-Icon.png" />
         </image>
      </ImageView>
      <Button fx:id="Customer" mnemonicParsing="false" onAction="#SwitchSceneCustomerLogin" style="-fx-background-color: AEEEEE;" text="Customer" translateX="-60.0" translateY="-55.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="Employee" mnemonicParsing="false" onAction="#SwitchSceneEmployeeLogin" style="-fx-background-color: AEEEEE;" text="Employee" translateX="60.0" translateY="-105.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="Treatment" mnemonicParsing="false" onAction="#Treatment" prefHeight="44.0" prefWidth="110.0" style="-fx-background-color: AEEEEE;" text="Treatments" translateX="-140.0" translateY="160.0">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </children>
</VBox>
